{
  "name": "converter",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint **/*.{ts,tsx} --fix --config .eslintrc.json",
    "format": "prettier --log-level warn --write \"{src,app}/**/*.{tsx,ts,css,scss}\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{(t|j)s?(x),?(s)css}": [
      "npm run format",
      "git add ."
    ],
    "*.(t|j)s?(x)": [
      "npm run lint",
      "git add ."
    ]
  },
  "dependencies": {
    "archiver": "^7.0.1",
    "axios": "^1.7.2",
    "classnames": "^2.5.1",
    "input": "^1.0.1",
    "js-cookie": "^3.0.5",
    "next": "14.2.3",
    "next-intl": "^3.14.0",
    "pretty-bytes": "^6.1.1",
    "primeicons": "^7.0.0",
    "primereact": "^10.6.6",
    "react": "^18",
    "react-dom": "^18",
    "sharp": "^0.33.4",
    "stream-to-blob": "^2.0.1",
    "telegraf": "^4.16.3",
    "telegram": "^2.22.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.13",
    "@types/archiver": "^6.0.2",
    "@types/js-cookie": "^3.0.6",
    "@types/node": "^20.14.2",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/stream-to-blob": "^2.0.0",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "eslint": "^8.56.0",
    "eslint-config-next": "14.2.3",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^4.3.8",
    "lint-staged": "^15.2.2",
    "postcss": "^8",
    "sass": "^1.71.1",
    "tailwindcss": "^3.4.1",
    "typescript": "^5"
  }
}
