{
  "name": "converter",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint **/*.{ts,tsx} --fix --config .eslintrc.json",
    "format": "prettier --log-level warn --write \"{src,app}/**/*.{tsx,ts,css,scss}\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{(t|j)s?(x),?(s)css}": [
      "npm run format",
      "git add ."
    ],
    "*.(t|j)s?(x)": [
      "npm run lint",
      "git add ."
    ]
  },
  "dependencies": {
    "next": "14.2.3",
    "next-intl": "^3.14.0",
    "primereact": "^10.6.5",
    "react": "^18",
    "react-dom": "^18"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "eslint": "^8.56.0",
    "eslint-config-next": "14.2.3",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^4.3.8",
    "lint-staged": "^15.2.2",
    "postcss": "^8",
    "sass": "^1.71.1",
    "tailwindcss": "^3.4.1",
    "typescript": "^5"
  }
}
